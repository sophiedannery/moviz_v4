{% extends 'base.html.twig' %}

{% block title %}Moviz
{% endblock %}

{% block body %}
	<div class="row flex-lg-row-reverse align-items-center g-5 py-5">
		<div class="col-10 col-sm-8 col-lg-6">
			<img src="{{ asset('assets/images/logo-moviz.png')}}" height="150">
		</div>
		<div class="col-lg-6">
			<h1 class="display-5 fw-bold text-body-emphasis lh-1 mb-3">Donnez votre avis sur vos films préférés</h1>
